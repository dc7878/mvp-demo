<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/ll_main_bottom"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/main_item_height"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_main_item_1"
            style="@style/MainItem"
            android:text="Android"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#ff0000"/>
        <TextView
            android:id="@+id/tv_main_item_2"
            style="@style/MainItem"
            android:text="Android"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#ff0000"/>
        <TextView
            android:id="@+id/tv_main_item_3"
            style="@style/MainItem"
            android:text="Android"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main_content"
        android:layout_above="@id/ll_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</RelativeLayout>
